<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/accelerometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="30dp">

        <TextView
            android:id="@+id/xValue"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"/>

        <TextView
            android:id="@+id/yValue"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"/>

        <TextView
            android:id="@+id/zValue"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"/>

    </LinearLayout>




    <LinearLayout
        android:id="@+id/gyroscope"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/accelerometer"
        android:layout_marginBottom="30dp">

        <TextView
            android:id="@+id/gyroXValue"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"/>

        <TextView
            android:id="@+id/gyroYValue"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"/>

        <TextView
            android:id="@+id/gyroZValue"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/magnetometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/gyroscope"
        android:layout_marginBottom="30dp">

        <TextView
            android:id="@+id/xMagnetoValue"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"/>

        <TextView
            android:id="@+id/yMagnetoValue"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"/>

        <TextView
            android:id="@+id/zMagnetoValue"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/lightPressureTempHumi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/magnetometer"
        android:layout_marginBottom="30dp">

        <TextView
            android:id="@+id/Light"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"/>

        <TextView
            android:id="@+id/Pressure"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"/>

        <TextView
            android:id="@+id/Temperature"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"/>

        <TextView
            android:id="@+id/Humidity"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"/>

    </LinearLayout>

</LinearLayout>